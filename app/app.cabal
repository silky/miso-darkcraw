cabal-version: 2.2
name:                app
version:             0.1.0.0
synopsis:            First miso app
category:            Web
build-type:          Simple
extra-source-files:
  assets/*.png

common client-server-shared
  other-modules:
    AI
    Board
    Card
    Constants
    Debugging
    Event
    Game
    JsonData
    Json
    Model
    ServerMessages
    SharedModel
    Tile
    Turn
    Update
    Utils
  build-depends:
    aeson,
    ansi-wl-pprint,
    base,
    bytestring,
    containers,
    extra,
    freer-simple,
    generic-lens,
    ilist,
    lens,
    miso,
    MonadRandom,
    mtl,
    operational,
    pretty-simple,
    random,
    random-shuffle,
    text,
    tree-diff,
    vector
  ghc-options:
    -Wincomplete-patterns
    -Werror
    -Wwarn=missing-home-modules
  default-language:
     Haskell2010

executable server
  import: client-server-shared
  if impl(ghcjs)
    buildable: False
  hs-source-dirs:
    server,
    shared
  main-is:
    Main.hs
  build-depends:
    websockets

executable app
  import: client-server-shared
  main-is:
    Main.hs
  other-modules:
    Cinema
    Configuration
    DeckView
    GameView
    GameViewInternal
    Movie
    MultiPlayerLobbyView
    PCWViewInternal
    SinglePlayerLobbyView
    View
    ViewBlocks
    ViewInternal
    WelcomeView
  hs-source-dirs:
    client,
    shared
  if !impl(ghcjs)
    build-depends:
       jsaddle, jsaddle-warp, transformers,
        wai,
        wai-app-static,
        warp,
        websockets

Test-Suite test-darkcraw
  if impl(ghcjs)
    buildable: False
  type:       exitcode-stdio-1.0
  main-is:    Test.hs
  other-modules:
    AI
    Board
    Card
    Cinema
    Constants
    Game
    Generators
    Json
    JsonData
    Movie
    Pretty
    SceneEquivalence
    SharedModel
    Tile
    Turn
  hs-source-dirs:
    shared,
    test
  build-depends:
    aeson,
    base >= 4 && < 5,
    bytestring,
    containers,
    extra,
    freer-simple,
    generic-lens,
    generic-random,
    hspec,
    ilist,
    lens,
    miso,
    MonadRandom,
    mtl,
    operational,
    QuickCheck,
    pretty-simple,
    random,
    random-shuffle,
    text
  default-language:
     Haskell2010
